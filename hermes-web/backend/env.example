# ZSCE Agent Backend Environment Variables
# Copy this file to .env and fill in your values

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (PostgreSQL + pgvector)
POSTGRES_USER=zsce
POSTGRES_PASSWORD=zsce_password
POSTGRES_DB=zsce
DATABASE_URL=postgresql+psycopg://zsce:zsce_password@localhost:5433/zsce

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=ZSCE Agent
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Context Curator (anti-rot)
CONTEXT_BUDGET_MESSAGES=50
CONTEXT_BUDGET_TOKENS=8000
AUTO_CURATE=false

# External Services
ZSCE_AGENT_URL=http://localhost:8001
GEMINI_API_KEY=your-gemini-api-key-here

# Logging
LOG_LEVEL=INFO
